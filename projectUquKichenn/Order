import java.util.Scanner;
import java.io.File;
import java.io.FileNotFoundException;

public class Order {

    private int orderID;
    private int customerID;
    private double totalPrice;
    private Menu menu;
    private Healthy healthy;
    private String bill;
    private double totalPriceAfterDiscount;

    public Scanner input = new Scanner(System.in);

    public void setOrder(int orderID, int customerID) {
        this.orderID = orderID;
        this.customerID = customerID;
    }

    public void generateBill() {
        System.out.println("Customer ID: " + this.customerID);
        System.out.println("Order  ID: " + this.orderID);
        System.out.println(bill);

        System.out.println("---------------------------------------------");
        System.out.println("Total price: " + totalPrice);
    }

    public Order() {
        bill = "";
        System.out.println("Which menu do you want 1 normal  2 healthy ?");
        int choose = input.nextInt();

        if (choose == 1) {

            menu = new Menu();
            do {
                System.out.println("  select and choose from the menu ");
                System.out.println("1.Food ");
                System.out.println(" 2.Drink");
                System.out.println(" 3.Sweet");
                System.out.println(" 4.Salad");
                System.out.println("5.Exit");
                choose = input.nextInt();
                input.nextLine();

                String userOrder = "";
                double price = 0;

                switch (choose) {
                    case 1:

                        read("MENU.txt", "Food");
                        userOrder = input.nextLine();
                        price = menu.foodPrice(userOrder);
                        totalPrice += price;
                        bill += userOrder + "           " + price + "\n";

                        break;

                    case 2:
                        read("MENU.txt", "Drink");
                        userOrder = input.nextLine();
                        price = menu.DirnksPrice(userOrder);
                        totalPrice += price;
                        bill += userOrder + "        " + price + "\n";

                        break;

                    case 3:

                        read("MENU.txt", "Sweet");
                        userOrder = input.nextLine();
                        price = menu.SweetsPrice(userOrder);
                        totalPrice += price;
                        bill += userOrder + "        " + price + "\n";
                        break;

                    case 4:
                        read("MENU.txt", "Salad");
                        userOrder = input.nextLine();
                        price = menu.saladsPrice(userOrder);
                        totalPrice += price;
                        bill += userOrder + "        " + price + "\n";

                        break;

                    case 5:
                        System.out.println("enjoy eating bye");
                        break;

                    default:
                        System.out.println("Invalid option");
                        break;

                }

            } while (choose != 5);

        } else {
            healthy = new Healthy();

            do {
                System.out.println("  select and choose from the menu ");
                System.out.println("1.Foods ");
                System.out.println(" 2.Drinks");
                System.out.println(" 3.Sweets");
                System.out.println(" 4.Salad");
                System.out.println("5.Exit");
                choose = input.nextInt();
                input.nextLine();
                String userOrder = "";

                double price = 0;

                switch (choose) {
                    case 1:

                        read("healthy.txt", "Food");
                        userOrder = input.nextLine();
                        price = healthy.foodPrice(userOrder);
                        totalPrice += price;
                        bill += userOrder + "           " + price + "\n";

                        break;

                    case 2:
                        read("healthy.txt", "Drink");
                        userOrder = input.nextLine();
                        price = healthy.DirnksPrice(userOrder);
                        totalPrice += price;
                        bill += userOrder + "        " + price + "\n";

                        break;

                    case 3:

                        read("healthy.txt", "Sweet");
                        userOrder = input.nextLine();
                        price = healthy.SweetsPrice(userOrder);
                        totalPrice += price;
                        bill += userOrder + "        " + price + "\n";
                        break;

                    case 4:
                        read("healthy.txt", "salad");
                        userOrder = input.nextLine();
                        price = healthy.saladsPrice(userOrder);
                        totalPrice += price;
                        bill += userOrder + "        " + price + "\n";

                        break;

                    case 5:
                        System.out.println("enjoy eating bye");
                        break;

                    default:
                        System.out.println("Invalid option");
                        break;

                }

            } while (choose != 5);

        }

        totalPriceAfterDiscount = Discount.calculateTotalPriceAfterDiscount(totalPrice, 15);
        bill += "Total Price " + totalPrice + "\n";
        bill += "Total Price After Discount " + totalPriceAfterDiscount;

    }

    public void read(String file, String section) {

        System.out.print("Enter the file");

        String fileName = file;
        Scanner inputStream = null;
        System.out.println("The file " + fileName + "\n" + "conntains the folloing lines:\n");
        try {
            inputStream = new Scanner(new File(fileName));

        } catch (FileNotFoundException e) {
            System.out.println("The file " + fileName + " was not found.");
            System.exit(0);
        }

        while (inputStream.hasNextLine()) {

            String line = inputStream.nextLine();

            String[] ary = line.split(",");
            if (line.equalsIgnoreCase(section)) {
                while (inputStream.hasNextLine()) {
                    line = inputStream.nextLine();
                    ary = line.split(",");

                    if (ary.length != 1) {
                        double price = Double.parseDouble(ary[1]);

                        if (file.equalsIgnoreCase("MENU.txt")) {
                            System.out.println(ary[0] + " " + ary[1]);

                        } else {
                            System.out.println(ary[0] + " " + ary[1] + " " + ary[2]);
                        }
                    } else {

                        break;

                    }
                }

                break;
            }

        }
        inputStream.close();

    }

}
